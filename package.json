{
  "scripts": {
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "report:merge": "mochawesome-merge cypress/reports/*.json -o cypress/reports/merged.json",
    "report:generate": "marge cypress/reports/merged.json -f index -o cypress/reports/html",
    "report:full": "npm run cypress:run && npm run report:merge && npm run report:generate"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.0.0",
    "cypress": "^15.0.0",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.4.1",
    "mochawesome-report-generator": "^6.2.0"
  }
}
